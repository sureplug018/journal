          <div id="sj-content" class="sj-content sj-addarticleholdcontent sj-addarticleholdvtwo">
            <div class="sj-dashboardboxtitle sj-titlewithform">
              <h2>Submit Article</h2>
            </div>
            <div class="sj-manageallsession">
              <!-- <form class="sj-formtheme sj-managesessionform">
                      <fieldset>
                        <div class="form-group">
                          <button type="button" class="sj-btn sj-btnactive" data-toggle="modal" data-target="#reviewermodal">View Journals</button>
                        </div>
                      </fieldset>
                    </form>
                    <div style="height: 100px;"></div> -->
              <% if(volumes.length === 0){ %>
              <h3 style="text-align: center;">No journal is published yet</h3>
              <% }else{ %>
              <form class="sj-formtheme submit-article-form">
                <fieldset>
                  <div class="form-group sj-inputwithicon sj-password">
                    <select id="volume" class="form-control">
                      <option value="" selected disabled>Select Issue</option>
                      <% volumes.forEach(function(volume){ %>
                      <option value="Volume <%= volume.volume %>, Number <%= volume.number %>">Volume <%= volume.volume %>, Number <%= volume.number %></option>
                      <% }) %>
                    </select>
                  </div>
                  <div class="form-group sj-inputwithicon sj-password">
                    <input type="text" id="title" class="form-control" placeholder="Title">
                  </div>
                  <div class="form-group sj-inputwithicon sj-password">
                    <input type="text" id="pageNumber" class="form-control" placeholder="Page Number">
                  </div>
                  <div class="form-group sj-inputwithicon sj-password">
                    <textarea class="form-control" placeholder="Add Abstract" id="abstract"></textarea>
                  </div>
                  <label for="journal">Article Must be a document(pdf)</label>
                  <div class="form-group sj-inputwithicon sj-password">
                    <input type="file" id="article" accept=".pdf" class="form-control">
                  </div>
                  <label for="author">Add at least Author</label>
                  <div class="form-group sj-inputwithicon sj-password">
                    <textarea class="form-control" placeholder="Add Authors" id="authors"></textarea>
                  </div>
                  <div class="form-group">
                    <button class="sj-btn sj-btnactive submit-article-btn">Submit Article</button>
                  </div>
                </fieldset>
              </form>
              <% } %>

