<!--************************************
					Main Start
			*************************************-->
<main id="sj-main" class="sj-main sj-haslayout sj-sectionspace">
  <div class="container">
    <div class="row">
      <div id="sj-twocolumns" class="sj-twocolumns">
        <%- include('partials/dashboardNav.ejs') %>
        <div class="col-12 col-sm-12 col-md-12 col-lg-8 col-xl-9 float-right">
          <div id="sj-content" class="sj-content sj-addarticleholdcontent sj-addarticleholdvtwo">
            <div class="sj-dashboardboxtitle sj-titlewithform">
              <h2>Admin Dashboard</h2>
              <div style="height: 30px;"></div>
              <p></p>
              <div class="row">
                <div class="col-12 col-xl-4 col-lg-4 col-md-4" style="margin-bottom: 20px;">
                  <div style="box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5); padding: 15px; border-radius: 10px;">
                    Users
                    <div class="row">
                      <div class="col-12 col-sm-4"><i style="font-size: 30px; color: #6e3f29;" class="lnr lnr-users"></i></div>
                      <div class="col-12 col-sm-8" style="text-align: right; font-size: 20px; font-weight: bolder;"><%= users.length %> <br> <span style="font-weight: lighter; font-size: 12px;"><a href="/users">See All<i class="lnr lnr-chevron-right"></i></a></span> </div>
                    </div>
                  </div>
                </div>
                <div class="col-12 col-xl-4 col-lg-4 col-md-4" style="margin-bottom: 20px;">
                  <div style="box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5); padding: 15px; border-radius: 10px;">
                    Messages
                    <div class="row">
                      <div class="col-12 col-sm-4"><i style="font-size: 30px; color: #6e3f29;" class="lnr lnr-envelope"></i></div>
                      <div class="col-12 col-sm-8" style="text-align: right; font-size: 20px; font-weight: bolder;"><%= supports.length %> <br> <span style="font-weight: lighter; font-size: 12px;"><a href="/supports">See All<i class="lnr lnr-chevron-right"></i></a></span> </div>
                    </div>
                  </div>
                </div>
                <div class="col-12 col-xl-4 col-lg-4 col-md-4" style="margin-bottom: 20px;">
                  <div style="box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5); padding: 15px; border-radius: 10px;">
                    Journal Issues
                    <div class="row">
                      <div class="col-12 col-sm-4"><i style="font-size: 30px; color: #6e3f29;" class="lnr lnr-book"></i></div>
                      <div class="col-12 col-sm-8" style="text-align: right; font-size: 20px; font-weight: bolder;"><%= journals.length %> <br> <span style="font-weight: lighter; font-size: 12px;"><a href="/journals">See All<i class="lnr lnr-chevron-right"></i></a></span> </div>
                    </div>
                  </div>
                </div>
                <div class="col-12 col-xl-4 col-lg-4 col-md-4" style="margin-bottom: 20px;">
                  <div style="box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5); padding: 15px; border-radius: 10px;">
                    Submissions
                    <div class="row">
                      <div class="col-12 col-sm-4"><i style="font-size: 30px; color: #6e3f29;" class="lnr lnr-layers"></i></div>
                      <div class="col-12 col-sm-8" style="text-align: right; font-size: 20px; font-weight: bolder;"><%= underReview.length %> <br> <span style="font-weight: lighter; font-size: 12px;"><a href="/article/under-review">See All<i class="lnr lnr-chevron-right"></i></a></span> </div>
                    </div>
                  </div>
                </div>
                <div class="col-12 col-xl-4 col-lg-4 col-md-4" style="margin-bottom: 20px;">
                  <div style="box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5); padding: 15px; border-radius: 10px;">
                    Events
                    <div class="row">
                      <div class="col-12 col-sm-4"><i style="font-size: 30px; color: #6e3f29;" class="lnr lnr-gift"></i></div>
                      <div class="col-12 col-sm-8" style="text-align: right; font-size: 20px; font-weight: bolder;"><%= events.length %> <br> <span style="font-weight: lighter; font-size: 12px;"><a href="/event-list">See All<i class="lnr lnr-chevron-right"></i></a></span> </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<!--************************************
					Main End
			*************************************-->

<!--************************************
			Send Feedback Popup Start
	*************************************-->
<div class="sj-modalboxarea modal fade" tabindex="-1" role="dialog" id="feedbackmodal">
  <div class="modal-dialog modal-lg" role="document">
    <div class="sj-modalcontent modal-content">
      <div class="sj-popuptitle">
        <h2>Edit Journal</h2>
        <a href="https://amentotech.com/htmls/amentojourn/javascript;void(0);" class="sj-closebtn close"><i class="lnr lnr-cross" data-dismiss="modal" aria-label="Close"></i></a>
      </div>
      <div class="modal-body">
        <div style="padding: 30px 30px;">
          <form class="sj-formtheme">
            <fieldset>
              <div class="form-group sj-inputwithicon sj-password">
                <input type="text" class="form-control" placeholder="Volume">
              </div>
              <div class="form-group sj-inputwithicon sj-password">
                <input type="text" class="form-control" placeholder="Number">
              </div>
              <div class="form-group sj-inputwithicon sj-password">
                <select id="monthSelect" class="form-control">
                  <option value="January">January</option>
                  <option value="February">February</option>
                  <option value="March">March</option>
                  <option value="April">April</option>
                  <option value="May">May</option>
                  <option value="June">June</option>
                  <option value="July">July</option>
                  <option value="August">August</option>
                  <option value="September">September</option>
                  <option value="October">October</option>
                  <option value="November">November</option>
                  <option value="December">December</option>
                </select>

              </div>
              <div class="form-group sj-inputwithicon sj-password">
                <input type="text" class="form-control" placeholder="Year">
              </div>
              <label for="imageCover">Journal Cover Must be an image(jpg, jpeg, png)</label>
              <div class="form-group sj-inputwithicon sj-password">
                <input type="file" id="imageCover" class="form-control">
              </div>
              <label for="journal">Journal Must be a document(pdf, docx, doc)</label>
              <div class="form-group sj-inputwithicon sj-password">
                <input type="file" id="journal" class="form-control">
              </div>
            </fieldset>
          </form>
        </div>
        <div class="sj-btnarea sj-updatebtns">
          <a href="javascript:void(0);" class="sj-btn sj-btnactive">Add Event</a>
          <a href="javascript:void(0);" class="sj-btncancel" data-dismiss="modal" aria-label="Close">Cancel</a>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('partials/userDashboardFooter.ejs') %>