<!--************************************
					Main Start
			*************************************-->
<main id="sj-main" class="sj-main sj-haslayout sj-sectionspace">
  <div class="container">
    <div class="row">
      <div id="sj-twocolumns" class="sj-twocolumns">
        <%- include('partials/dashboardNav.ejs') %>
        <div class="col-12 col-sm-12 col-md-12 col-lg-8 col-xl-9 float-right">
          <div id="sj-content" class="sj-content sj-addarticleholdcontent sj-addarticleholdvtwo">
            <div class="sj-dashboardboxtitle sj-titlewithform">
              <h2>Manage Supports</h2>
            </div>
            <div class="sj-manageallsession">
              <div class="table-responsive">
                <table class="table table-striped table-hover">
                  <thead>
                    <tr>
                      <th>S/N</th>
                      <th>First Name</th>
                      <th>Email</th>
                      <th>Phone Number</th>
                      <th>Subject</th>
                      <th>Message</th>
                      <th>Reply</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% supports.forEach((support, i) => { %>
                    <tr>
                      <th scope="row"><%= i + 1 %></th>
                      <td><%= support.fullName %></td>
                      <td><%= support.email %></td>
                      <td><%= support.phoneNumber %></td>
                      <td><%= support.subject %></td>
                      <td><%= support.message %></td>
                      <td><a style="cursor: pointer;" data-support-id="<%= support.id %>" data-toggle="modal" data-target="#feedbackmodal" class="sj-pencilbtn reply-support-modal"><i class="lnr lnr-envelope"></i></a></td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
              <!-- <nav class="sj-pagination">
                      <ul>
                        <li class="sj-prevpage"><a href="manageeditions.html#"><i class="fa fa-angle-left"></i> Previous</a></li>
                        <li class="sj-active"><a href="manageeditions.html#">01</a></li>
                        <li><a href="manageeditions.html#">02</a></li>
