<main id="sj-main" class="sj-main sj-haslayout sj-sectionspace">
  <div class="container">
    <div class="row">
      <div id="sj-twocolumns" class="sj-twocolumns">
        <%- include('partials/dashboardNav.ejs') %>
        <div class="col-12 col-sm-12 col-md-12 col-lg-8 col-xl-9 float-right">
          <div id="sj-content" class="sj-content sj-addarticleholdcontent">
            <div class="sj-dashboardboxtitle sj-titlewithform">
              <h2>Articles</h2>
            </div>
            <div style="height: 100px;"></div>

            <% if(articles.length === 0){ %>
            <h3 style="text-align: center;">No articles found!</h3>
            <% }else{  %>
            <div class="table-responsive">
              <table class="table table-striped table-hover" style="min-width: 1300px;">
                <thead>
                  <tr>
                    <th>S/N</th>
                    <th>Title</th>
                    <th>Page</th>
                    <th>No. of Authors</th>
                    <th>Date</th>
                    <th>Details</th>
                    <th>Edit</th>
                    <th>Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <% articles.forEach(function (article, i) { %>
                  <tr>
                    <th scope="row"><%= i + 1 %></th>
                    <td><%= article.title %></td>
                    <td><%= article.pageNumber %></td>
                    <td><%= article.authors.length %></td>
                    <% const timeStamp = article.createdAt %>
                    <% const date = timeStamp.toLocaleDateString() %>
                    <% const time = timeStamp.toLocaleTimeString() %>
                    <td><%= date %> (<%= time %>)</td>
                    <td><a href="/journal/<%= article.id %>">View Details</a></td>
                    <td><a class="sj-pencilbtn edit-article-modal" style="cursor: pointer;" data-toggle="modal" data-article-id="<%= article.id %>" data-target="#feedbackmodal2"><i class="ti-pencil"></i></a></td>
                    <td><a style="cursor: pointer;" data-toggle="modal" data-article-id="<%= article.id %>" data-target="#feedbackmodal" class="sj-pencilbtn delete-article-modal"><i class="ti-trash"></i></a></td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
            <% } %>

