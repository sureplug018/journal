<main id="sj-main" class="sj-main sj-haslayout sj-sectionspace">
  <div class="container">
    <div class="row">
      <div id="sj-twocolumns" class="sj-twocolumns">
        <%- include('partials/dashboardNav.ejs') %>
        <div class="col-12 col-sm-12 col-md-12 col-lg-8 col-xl-9 float-right">
          <div id="sj-content" class="sj-content">
            <div class="sj-addarticleholdcontent">
              <div class="sj-dashboardboxtitle">
                <h2>Change User Role</h2>
              </div>
              <div class="sj-acsettingthold">
                <div style="padding: 30px 30px;">
                  <form class="sj-formtheme user-role-form" style="margin-bottom: 20px;">
                    <fieldset>
                      <div class="form-group sj-inputwithicon sj-password">
                        <input type="email" id="email" class="form-control" placeholder="User Email">
                      </div>
                      <div class="form-group sj-inputwithicon sj-password">
                        <select id="role" class="form-control">
                          <option value="" disabled selected>Select Role</option>
                          <option value="user">User</option>
                          <option value="admin">Admin</option>
                        </select>
                      </div>
                      <div class="form-group sj-inputwithicon sj-password">
                        <button class="sj-btn sj-btnactive update-btn">Add Event</button>
                      </div>
                    </fieldset>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
