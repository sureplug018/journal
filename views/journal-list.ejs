<main id="sj-main" class="sj-main sj-haslayout sj-sectionspace">
  <div class="container">
    <div class="row">
      <div id="sj-twocolumns" class="sj-twocolumns">
        <%- include('partials/dashboardNav.ejs') %>
        <div class="col-12 col-sm-12 col-md-12 col-lg-8 col-xl-9 float-right">
          <div id="sj-content" class="sj-content sj-addarticleholdcontent sj-addarticleholdvtwo">
            <div class="sj-dashboardboxtitle sj-titlewithform">
              <h2>Manage Journals</h2>
            </div>
            <div class="sj-manageallsession">
              <form class="sj-formtheme sj-managesessionform">
                <fieldset>
                  <div class="form-group">
                    <button onclick="window.location.href='/add-journal'" class="sj-btn sj-btnactive">Add New Journal</button>
                  </div>
                </fieldset>
              </form>
              <div style="height: 100px;"></div>
              <% if(journals.length === 0){ %>
              <h3 style="text-align: center;">No journal yet!</h3>
              <% }else{ %>
              <div class="table-responsive">
                <table class="table table-striped table-hover">
                  <thead>
                    <tr>
                      <th>S/N</th>
                      <th>Volume</th>
                      <th>Number</th>
                      <th>Month</th>
                      <th>Year</th>
                      <th>No. of Articles</th>
                      <th>Add Article</th>
                      <th>Articles</th>
                      <th>Edit</th>
                      <th>Delete</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% journals.forEach((journal, i) => { %>
                    <tr>
                      <th scope="row"><%= i + 1 %></th>
                      <td><%= journal.volume %></td>
                      <td><%= journal.number %></td>
                      <td><%= journal.month %></td>
                      <td><%= journal.year %></td>
                      <td><%= journal.articleNumber %></td>
                      <td><a style="cursor: pointer;" data-toggle="modal" data-journal-id="<%= journal.id %>" data-target="#feedbackmodal2" class="sj-pencilbtn add-article-modal"><i class="ti-plus"></i> Add</a></td>
                      <td><a href="/journals/:journalId">View Articles</a></td>
                      <td><a style="cursor: pointer;" data-journal-id="<%= journal.id %>" data-toggle="modal" data-target="#feedbackmodal" class="sj-pencilbtn edit-journal-modal"><i class="ti-pencil"></i></a></td>
                      <td><a style="cursor: pointer;" data-journal-id="<%= journal.id %>" data-toggle="modal" data-target="#feedbackmodal3" class="sj-pencilbtn delete-journal-modal"><i class="ti-trash"></i></a></td>
                    </tr>
                    <% }) %>

                  </tbody>
                </table>
              </div>
              <% } %>

              <!-- <nav class="sj-pagination">
                      <ul>
                        <li class="sj-prevpage"><a href="manageeditions.html#"><i class="fa fa-angle-left"></i> Previous</a></li>
                        <li class="sj-active"><a href="manageeditions.html#">01</a></li>
                        <li><a href="manageeditions.html#">02</a></li>
                        <li><a href="manageeditions.html#">03</a></li>
                        <li><a href="manageeditions.html#">04</a></li>
                        <li><a href="manageeditions.html#">05</a></li>
                        <li class="sj-nextpage"><a href="manageeditions.html#">Next <i class="fa fa-angle-right"></i></a></li>
                      </ul>
                    </nav> -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<!--************************************
					Main End
