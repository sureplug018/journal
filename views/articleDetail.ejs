<%- include('partials/landingPageHeader.ejs') %>
<!--************************************
					Inner Banner Start
			*************************************-->
<div class="sj-innerbanner">
  <div class="container">
    <div class="row">
      <div class="col-12 col-sm-12 col-md-12 col-lg-12">
        <div class="sj-innerbannercontent">
          <h1>Article Details</h1>
          <ol class="sj-breadcrumb">
            <li><a href="/">Home</a></li>
            <li><a href="javascript:void(0);">Article</a></li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>
<!--************************************
					Inner Banner End
			*************************************-->
<!--************************************
					Main Start
			*************************************-->
<main id="sj-main" class="sj-main sj-haslayout sj-sectionspace">
  <div id="sj-twocolumns" class="sj-twocolumns">
    <div class="container">
      <div class="row">
        <div class="col-12 col-sm-12 col-md-8 col-lg-9">
          <div id="sj-content" class="sj-content">
            <div class="sj-articledetail">
              <ul class="sj-downloadprint">
                <li><a href="mailto:editor@theflagshipjournal.org"><i class="fa fa-envelope"></i><span>Email Us</span></a></li>
                <li><a href="<%= article.article %>"><i class="fa fa-download"></i><span>Download</span></a></li>
              </ul>
              <div class="sj-ourfocus sj-sectioninnerspace">

                <h3 style="font-weight: bold;"><%= article.title %></h3>
                <h6>
                  <% article.authors.forEach(function(author){ %>
                  <%= author.firstName %> <%= author.lastName %>,
                  <% }) %>
                </h6>
                <hr>
                <h5 style="text-decoration: underline; font-weight: bold;">Abstract</h5>
                <div class="sj-description">
                  <% const para = article.abstract.split('*') %>
                  <% para.forEach(function(p){ %>
                  <p><%= p %></p>
                  <% }) %>
                  <p><a class="sj-btn" href="<%= article.article %>" style="background-color: #6E3F29; text-decoration: none;"><i style="font-size: large;" class="fa fa-file-pdf"></i> Download PDF</a></p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <%- include('partials/aside.ejs') %>
      </div>
    </div>
  </div>
</main>
<!--************************************
					Main End
			*************************************-->
<%- include('partials/landingPageFooter.ejs') %>