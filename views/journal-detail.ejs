<%- include('partials/landingPageHeader.ejs') %>
<!--************************************
					Inner Banner Start
			*************************************-->
<div class="sj-innerbanner">
  <div class="container">
    <div class="row">
      <div class="col-12 col-sm-12 col-md-12 col-lg-12">
        <div class="sj-innerbannercontent">
          <h1>Issue Index</h1>
          <ol class="sj-breadcrumb">
            <li><a href="/">Home</a></li>
            <li><a href="javascript:void(0);">Issues</a></li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>
<!--************************************
					Inner Banner End
			*************************************-->
<!--************************************
					Main Start
			*************************************-->
<main id="sj-main" class="sj-main sj-haslayout sj-sectionspace">
  <div id="sj-twocolumns" class="sj-twocolumns">
    <div class="container">
      <div class="row">
        <div class="col-12 col-sm-12 col-md-8 col-lg-9">
          <section class="sj-haslayout sj-sectioninnerspace">
            <div class="sj-borderheading">
              <h3>Journal Issue</h3>
            </div>
            <div id="sj-editorchoiceslider" class="sj-editorchoiceslider sj-editorschoice owl-carousel">
              <div class="item" style="margin-bottom: 100px;">
                <article class="sj-post sj-editorchoice">
                  <figure class="sj-postimg">
                    <img src="<%= journal.imageCover %>" alt="image description">
                  </figure>
                  <div class="sj-postcontent">
                    <!-- <div class="sj-head">
								            <h3><a href="javascript:void(0);">A Milestone for CART Cells &amp; Treatment</a></h3>
								          </div> -->
                    <% const timeStamp = journal.createdAt %>
                    <% const date = timeStamp.toLocaleDateString() %>
                    <div class="sj-description">
                      <p>Vol. <%= journal.volume %> <span style="margin-right: 10px;"></span> No. <%= journal.number %> <span style="margin-right: 10px;"></span> <%= journal.month %>, <%= journal.year %>
                        <span style="margin-right: 10px;"></span>Published: <%= date %>
                      </p>
                    </div>
                    <!-- <a class="sj-bÃ·tn" href="javascript:void(0);"><i style="font-size: large;" class="fa fa-file-pdf"></i> Download</a> -->
                  </div>

                  <p></p>
                </article>

                <h3 style="text-decoration: underline;">Articles</h3>
                <% if(articles.length === 0){ %>
                <h3 style="text-align: center;">No article found!</h3>
                <%  }else{ %>
                <% articles.forEach(function(article){ %>
                <h4 style="font-weight: bold; margin-top: 30px;"><a href="/journal-issues/<%= journal.id %>/<%= article.slug %>"><%= article.title %></a></h4>
                <p>
                  <% const authors = article.authors.forEach(function(author){ %>
                  <%= author.firstName %> <%= author.lastName %>,
                  <% }) %>
                </p>
                <a class="sj-btn" href="<%= article.article %>"><i style="font-size: large;" class="fa fa-file-pdf"></i> PDF</a>
                <% }) %>
                <% } %>

              </div>
            </div>
          </section>
        </div>
        <%- include('partials/aside.ejs') %>
      </div>
    </div>
  </div>
</main>
<!--************************************
					Main End
			*************************************-->

<%- include('partials/landingPageFooter.ejs') %>