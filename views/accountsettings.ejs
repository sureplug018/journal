<%- include('partials/userDashboardHeader.ejs') %>
<!--************************************
					Inner Banner Start
			*************************************-->
<div class="sj-innerbanner">
  <div class="container">
    <div class="row">
      <div class="col-12 col-sm-12 col-md-12 col-lg-12">
        <div class="sj-innerbannercontent">
          <h1>Account Settings</h1>
          <ol class="sj-breadcrumb">
            <li><a href="/">Home</a></li>
            <li><a href="javascript:void(0);">Account</a></li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>
<!--************************************
					Inner Banner End
			*************************************-->
<!--************************************
					Main Start
			*************************************-->
<main id="sj-main" class="sj-main sj-haslayout sj-sectionspace">
  <div class="container">
    <div class="row">
      <div id="sj-twocolumns" class="sj-twocolumns">
        <%- include('partials/dashboardNav.ejs') %>
        <div class="col-12 col-sm-12 col-md-12 col-lg-8 col-xl-9 float-right">
          <div id="sj-content" class="sj-content">
            <div class="sj-addarticleholdcontent">
              <div class="sj-dashboardboxtitle">
                <h2>Account Settings</h2>
              </div>
              <div class="sj-acsettingthold">
                <div style="padding: 30px 30px;">
                  <form class="sj-formtheme admin-profile-form" style="margin-bottom: 50px;">
                    <fieldset>
                      <div class="form-group sj-inputwithicon sj-password">
                        <input type="text" id="firstName" class="form-control" value="<%= user.firstName %>" placeholder="First Name">
                      </div>
                      <div class="form-group sj-inputwithicon sj-password">
                        <input type="text" id="lastName" class="form-control" value="<%= user.lastName %>" placeholder="Last Name">
                      </div>
                      <div class="form-group sj-inputwithicon sj-password">
                        <input type="email" id="email" class="form-control" value="<%- user.email %>" disabled placeholder="Email">
                      </div>
                      <div class="form-group sj-inputwithicon sj-password">
                        <input type="text" id="phoneNumber" class="form-control" value="<%= user.phoneNumber %>" placeholder="Phone Number">
                      </div>
                      <button class="sj-btn sj-btnactive admin-profile-btn">Update</button>
                    </fieldset>
                  </form>
                </div>
              </div>
            </div>
            <div class="sj-addarticleholdcontent">
              <div class="sj-dashboardboxtitle">
                <h2>Change Password</h2>
              </div>
              <div class="sj-acsettingthold">
                <form class="sj-formtheme sj-formpassword admin-password-form" style="margin-bottom: 30px;">
                  <fieldset>
                    <div class="form-group sj-inputwithicon sj-password">
                      <i class="lnr lnr-lock"></i>
                      <input type="password" id="passwordCurrent" class="form-control" placeholder="Old Password">
                    </div>
                    <div class="form-group sj-inputwithicon sj-password">
                      <i class="lnr lnr-lock"></i>
                      <input type="password" id="password" class="form-control" placeholder="New Password">
                    </div>
                    <div class="form-group sj-inputwithicon sj-password">
                      <i class="lnr lnr-lock"></i>
                      <input type="password" id="passwordConfirm" class="form-control" placeholder="Retype Password">
                    </div>
                    <div style="height: 70px;"></div>
                    <button class="sj-btn sj-btnactive admin-password-btn">Update Password</button>
                  </fieldset>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<!--************************************
					Main End
			*************************************-->
<%- include('partials/userDashboardFooter.ejs') %>