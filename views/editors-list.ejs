<!--************************************
					Main Start
			*************************************-->
<main id="sj-main" class="sj-main sj-haslayout sj-sectionspace">
  <div class="container">
    <div class="row">
      <div id="sj-twocolumns" class="sj-twocolumns">
        <%- include('partials/dashboardNav.ejs') %>
        <div class="col-12 col-sm-12 col-md-12 col-lg-8 col-xl-9 float-right">
          <div id="sj-content" class="sj-content sj-addarticleholdcontent sj-addarticleholdvtwo">
            <div class="sj-dashboardboxtitle sj-titlewithform">
              <h2>Manage Editors</h2>
            </div>
            <div class="sj-manageallsession">
              <form class="sj-formtheme sj-managesessionform">
                <fieldset>
                  <div class="form-group">
                    <button class="sj-btn sj-btnactive" onclick="window.location.href='/add-editor'">Add New Editor</button>
                  </div>
                </fieldset>
              </form>
              <div style="height: 100px;"></div>
              <% if(editors.length === 0){ %>
              <h3 style="text-align: center;">No editor yet!</h3>
              <% }else{ %>
              <div class="table-responsive">
                <table class="table table-striped table-hover" style="min-width: 1000px;">
                  <thead>
                    <tr>
                      <th>S/N</th>
                      <th>Full Name</th>
                      <th>Department</th>
                      <th>Level of Education</th>
                      <th>Occupation</th>
                      <th>edit</th>
                      <th>Delete</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% editors.forEach(function(editor, i) { %>
                    <tr>
                      <th scope="row"><%= i + 1 %></th>
                      <td><%= editor.name %></td>
                      <td><%= editor.dept %></td>
                      <td><%= editor.levelOfEducation %></td>
                      <td><%= editor.occupation %></td>
                      <td><a style="cursor: pointer;" data-toggle="modal" data-target="#feedbackmodal" data-editor-id="<%= editor.id %>" class="sj-pencilbtn edit-editor-modal"><i class="ti-pencil"></i></a></td>
                      <td><a style="cursor: pointer;" data-toggle="modal" data-target="#feedbackmodal2" data-editor-id="<%= editor.id %>" class="sj-pencilbtn delete-editor-modal"><i class="ti-trash"></i></a></td>
                    </tr>
                    <% }) %>

                  </tbody>
                </table>
              </div>
              <% } %>

              <!-- <nav class="sj-pagination">
                      <ul>
                        <li class="sj-prevpage"><a href="manageeditions.html#"><i class="fa fa-angle-left"></i> Previous</a></li>
                        <li class="sj-active"><a href="manageeditions.html#">01</a></li>
                        <li><a href="manageeditions.html#">02</a></li>
                        <li><a href="manageeditions.html#">03</a></li>
                        <li><a href="manageeditions.html#">04</a></li>
                        <li><a href="manageeditions.html#">05</a></li>
                        <li class="sj-nextpage"><a href="manageeditions.html#">Next <i class="fa fa-angle-right"></i></a></li>
                      </ul>
                    </nav> -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<!--************************************
					Main End
			*************************************-->

<!--************************************
			Send Feedback Popup Start
	*************************************-->
<div class="sj-modalboxarea sj-modalboxareavtwo modal fade" tabindex="-1" role="dialog" id="feedbackmodal">
  <div class="modal-dialog modal-lg" role="document">
    <div class="sj-modalcontent modal-content">
      <div class="sj-popuptitle">
        <h2>Edit Editor</h2>
        <a href="https://amentotech.com/htmls/amentojourn/javascript;void(0);" class="sj-closebtn close"><i class="lnr lnr-cross" data-dismiss="modal" aria-label="Close"></i></a>
      </div>
      <div class="modal-body">
        <div style="padding: 30px 30px;">
          <form class="sj-formtheme">
            <fieldset>
              <div class="form-group sj-inputwithicon sj-password">
                <input type="text" id="name" class="form-control" placeholder="Full Name">
              </div>
              <div class="form-group sj-inputwithicon sj-password">
                <select class="form-control" id="dept">
                  <option value="" disabled selected>Select Department</option>
                  <option value="Editor-In-Chief">Editor-In-Chief</option>
                  <option value="Editorial Secretary">Editorial Secretary</option>
                  <option value="Editorial Board Members">Editorial Board Members</option>
                  <option value="Editorial Advisors">Editorial Advisors</option>
                </select>
              </div>
              <div class="form-group sj-inputwithicon sj-password">
                <input type="text" id="levelOfEducation" class="form-control" placeholder="Level of Education (e.g Ph.D)">
              </div>
              <div class="form-group sj-inputwithicon sj-password">
                <input type="text" id="occupation" class="form-control" placeholder="Occupation or Office">
              </div>
            </fieldset>
          </form>
        </div>
        <div class="sj-btnarea sj-updatebtns">
          <a style="cursor: pointer; color: white ;" class="sj-btn sj-btnactive edit-editor-btn">Update Editor</a>
          <a style="cursor: pointer;" class="sj-btncancel" data-dismiss="modal" aria-label="Close">Cancel</a>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="sj-modalboxarea modal fade" tabindex="-1" role="dialog" id="feedbackmodal2">
  <div class="modal-dialog" role="document">
    <div class="sj-modalcontent modal-content">
      <div class="sj-popuptitle">
        <h2>Action</h2>
        <a href="https://amentotech.com/htmls/amentojourn/javascript;void(0);" class="sj-closebtn close"><i class="lnr lnr-cross" data-dismiss="modal" aria-label="Close"></i></a>
      </div>
      <div class="modal-body">
        <div class="sj-popupbtn">
          <button class="sj-btn sj-btnactive delete-editor-btn">Delete Editor</button> <button type="button" data-dismiss="modal" aria-label="Close" class="sj-btn sj-btnactive">Cancel</button>
        </div>
      </div>
    </div>
  </div>
</div>
