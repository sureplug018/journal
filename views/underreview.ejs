      <div class="col-12 col-sm-12 col-md-12 col-lg-12">
        <div class="sj-innerbannercontent">
          <h1>Articles Under Review</h1>
          <ol class="sj-breadcrumb">
            <li><a href="/">Home</a></li>
            <li><a href="javascript:void(0);">Articles</a></li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>
<!--************************************
					Inner Banner End
			*************************************-->
<!--************************************
					Main Start
			*************************************-->
<main id="sj-main" class="sj-main sj-haslayout sj-sectionspace">
  <div class="container">
    <div class="row">
      <div id="sj-twocolumns" class="sj-twocolumns">
        <%- include('partials/dashboardNav.ejs') %>
        <div class="col-12 col-sm-12 col-md-12 col-lg-8 col-xl-9 float-right">
          <div id="sj-content" class="sj-content sj-addarticleholdcontent">
            <div class="sj-dashboardboxtitle sj-titlewithform">
              <h2>Articles Under Review</h2>
            </div>
            <div style="height: 100px;"></div>
            <% if(submissions.length === 0){ %>
            <h3 style="text-align: center;">No submission found</h3>
            <% }else{ %>
            <div class="table-responsive">
              <table class="table table-striped table-hover" style="min-width: 1300px;">
                <thead>
                  <tr>
                    <th>S/N</th>
                    <th>Issue</th>
                    <th>Title</th>
                    <th>Page</th>
                    <th>Date</th>
                    <th>Details</th>
                    <th>Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <% submissions.forEach(function(submission, i){  %>
                  <tr>
                    <th scope="row"><%= i + 1 %></th>
                    <td><%= submission.volume %></td>
                    <td><%= submission.title %></td>
                    <td><%= submission.pageNumber %></td>
                    <% const timeStamp = submission.createdAt %>
                    <% const date = timeStamp.toLocaleDateString() %>
                    <% const time = timeStamp.toLocaleTimeString() %>
                    <td><%= date %> (<%= time %>)</td>
                    <td><a href="/article-details/<%= submission.id %>">View Details</a></td>
                    <td><a style="cursor: pointer;" data-submission-id="<%= submission.id %>" data-toggle="modal" data-target="#feedbackmodal" class="sj-pencilbtn delete-submission-modal"><i class="ti-trash"></i></a></td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
            <% } %>

            <!-- <nav class="sj-pagination">
                    <ul>
                      <li class="sj-prevpage"><a href="aticle-list.html#"><i class="fa fa-angle-left"></i> Previous</a></li>
                      <li class="sj-active"><a href="aticle-list.html#">01</a></li>
                      <li><a href="aticle-list.html#">02</a></li>
                      <li><a href="aticle-list.html#">03</a></li>
                      <li><a href="aticle-list.html#">04</a></li>
                      <li><a href="aticle-list.html#">05</a></li>
                      <li class="sj-nextpage"><a href="aticle-list.html#">Next <i class="fa fa-angle-right"></i></a></li>
                    </ul>
                  </nav> -->
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<!--************************************
			Send Feedback Popup Start
	*************************************-->
<div class="sj-modalboxarea modal fade" tabindex="-1" role="dialog" id="feedbackmodal">
  <div class="modal-dialog" role="document">
    <div class="sj-modalcontent modal-content">
      <div class="sj-popuptitle">
        <h2>Action</h2>
        <a href="https://amentotech.com/htmls/amentojourn/javascript;void(0);" class="sj-closebtn close"><i class="lnr lnr-cross" data-dismiss="modal" aria-label="Close"></i></a>
      </div>
      <div class="modal-body">
        <div class="sj-popupbtn">
          <button class="sj-btn sj-btnactive delete-submission-btn">Delete</button> <button type="button" data-dismiss="modal" aria-label="Close" class="sj-btn sj-btnactive">Cancel</button>
        </div>
      </div>
    </div>
  </div>
</div>
<!--************************************
			Send Feedback Popup End
	*************************************-->
